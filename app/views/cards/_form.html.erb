<%= simple_form_for @card do |f| %>
  <%= f.error_notification %>
  <div class="form-group">
    <%= f.input :original_text, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.input :translated_text, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.button :submit, class: "btn btn-primary", value: 'Save'%>
  </div>
<% end %>
